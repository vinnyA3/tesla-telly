---
import links from '../link-items.json';

import Layout from '../layouts/Layout.astro';

import Carousel from '../components/Carousel.astro';
import FullscreenButton from '../components/FullscreenButton.astro';
---

<Layout title="Raphchan Life">
  <main>
    <nav class="main-nav">
      <div class="main-nav__intro">
        <img src="/images/smol.gif" />
        <h1>Smol Ame is the captain of this cabin now ...</h1>
      </div>
      <FullscreenButton text={'Open in Fullscreen'} />
    </nav>

    <div class="carousels">
      {
        links.data.map((entry) => (
          <section class="carousel-wrapper">
            <Carousel title={entry.category} items={entry.items} />
          </section>
        ))
      }
    </div>

    <footer class="main-footer">
      <a href="https://www.youtube.com/watch?v=rOaIFn6AhPo"
        ><img src="/images/raphchanlife.png" />
      </a>
    </footer>
  </main>

  <style>
    main {
      display: flex;
      flex-direction: column;
      margin: 0 auto;
      padding: 1.5em 1.5em 0em 1.5em;
      max-width: 80vw;
      height: inherit;
      background-color: #f6f6f6;
    }

    h1 {
      font-size: 3rem;
      font-weight: 800;
      margin: 0;
    }

    .carousels {
      margin-top: 3em;
    }

    .carousel-wrapper:not(:last-child) {
      margin-bottom: 3em;
    }

    .main-nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .main-nav__intro {
      display: flex;
      align-items: center;
    }

    .main-nav__intro > img {
      height: 4em;
      max-width: 100%;
      margin-right: 1.2em;
    }

    .main-footer {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      margin-top: auto;
      padding: 0.8em 0 0.8em 0;
      width: 100%;
    }

    .main-footer img {
      height: 12em;
      max-width: auto;
    }
  </style>
</Layout>
