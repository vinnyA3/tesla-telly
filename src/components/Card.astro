---
import type { Item } from '../types';

export type Props = Pick<Item, 'image' | 'link'> & { style?: string };

const { link, image, style } = Astro.props;
---

<li class="link-card" style={style}>
  <a href={link}>
    <img src={image} alt="" class="image" />
  </a>
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    width: 19em;
    height: 8em;
    overflow: hidden;
    justify-content: center;
    align-items: center;
    border-radius: 0.6rem;
  }

  .image {
    height: auto;
    max-width: 100%;
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    background-color: white;
  }
</style>
