---
import Card from './Card.astro';

interface Props {
	title: string;
  items?: { name: string, link: string, image: string }[]
}

const { title, items } = Astro.props;
---

<div class="carousel">
  <h2>{title}</h2>

  <ul role="list" class="link-card-grid">
    {items?.map((item) => (
      <Card
        href={item.link}
        title={item.name}
        body="Learn how Astro works and explore the official API docs."
      />
     ))}
  </ul>
</div>

<style>
  .carousel {
    overflow-y: scroll;
  }

	.link-card-grid {
    display: inline-flex;
	}
</style>
