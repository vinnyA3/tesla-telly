---
import Card from './Card.astro';

interface Props {
	title: string;
  items?: { name: string, link: string, image: string }[]
}

const { title, items } = Astro.props;
const cardItemMarginStyle = "margin-right: 1em";
---

<div class="carousel">
  <h2 class="carousel__title">{title}</h2>

  <ul role="list" class="link-card-grid">
    {items?.map((item, idx) => (
      <Card
        href={item.link}
        title={item.name}
        body={item.name}
        style={idx !== items.length - 1 ? cardItemMarginStyle : undefined}
      />
     ))}
  </ul>
</div>

<style>
  .carousel {
    overflow-y: scroll;
  }

  .carousel__title {
    font-weight: bold;
    margin-bottom: .8em;
  }

	.link-card-grid {
    display: inline-flex;
	}
</style>
