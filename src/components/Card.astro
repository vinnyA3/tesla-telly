---
export interface Props {
	title: string;
	image: string;
	href: string;
  style?: string;
}

const { href, image, style } = Astro.props;
---

<li class="link-card" style={style}>
	<a href={href}>
    <img src={image} alt="" class="image">
	</a>
</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
    width: 19em;
    height: 8em;
    overflow: hidden;
    justify-content: center;
    align-items: center;
		border-radius: 0.6rem;
	}

  .image {
    height: auto;
    max-width: 100%;
  }

	.link-card > a {
		width: 100%;
		text-decoration: none;
		background-color: white;
		opacity: 0.8;
	}
</style>
